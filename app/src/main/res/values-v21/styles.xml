<resources>

    <!-- Base application theme. -->
    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/AppThemeCustom.Button</item>


        <!-- probleme ici pour appliquer le custom theme edit text apparement faut virer android -->
        <item name="android:editTextStyle">@style/AppThemeCustom.EditText</item>
        <item name="android:datePickerStyle">@style/datepicker</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="datepicker" parent="android:Widget.DatePicker">
        <item name="android:textColorPrimary">@color/Evening</item>
        <item name="android:textColor">@color/Evening</item>
        <item name="android:colorBackground">@color/Evening</item>
    </style>
    <style name="AppThemeCustom.Button" parent="android:Widget.Button">
        <item name="android:textColor">@color/GreyTc</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:paddingRight">100dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="AppThemeCustom.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/GreyTc</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Button2" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:colorButtonNormal">@color/Evening</item>
        <item name="android:colorAccent">@color/Helio</item>
        <item name="android:windowBackground">@color/Helio</item>
        <item name="colorPrimary">@color/Helio</item>
        <item name="colorPrimaryDark">@color/Helio</item>
        <item name="colorAccent">@color/Helio</item>
        <item name="colorButtonNormal">@color/Helio</item>
        <item name="colorControlHighlight">@color/Helio</item>
        <item name="android:colorBackground">@color/Evening</item>
    </style>
    <!-- Shadow effect
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            -->

    <style name="AppThemeCustom.EditText" parent="android:Widget.EditText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">#c9c9c9</item>
        <item name="android:textColor">@color/GreyTc</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:background">@drawable/editshape</item>
    </style>

    <style name="AppThemeCustom.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/Hex</item>
        <item name="android:colorPrimaryDark">#000000</item><!-- sa marche pas :'( -->

    </style>
    
    <style name="AppThemeCustom.ToolbarTextApp">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Hex</item>
    </style>
</resources>