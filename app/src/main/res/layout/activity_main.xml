    <android.support.v4.widget.DrawerLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context="azzaoui.sociadee.MainActivity">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <fragment
                    android:name="azzaoui.sociadee.ProfileFragment"
                    android:id="@+id/profileFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    tools:layout="@layout/fragment_profile" />

                <fragment
                    android:name="azzaoui.sociadee.MapWrapperFragment"
                    android:id="@+id/mapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    tools:layout="@layout/fragment_mapwrapper" />
                <fragment
                    android:name="azzaoui.sociadee.PeopleGridFragment"
                    android:id="@+id/peopleGridFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    tools:layout="@layout/fragment_people_grid" />
                <fragment
                    android:name="azzaoui.sociadee.GroupChatFragment"
                    android:id="@+id/groupChatFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    tools:layout="@layout/fragment_group_chat" />
                <fragment
                    android:name="azzaoui.sociadee.AddPicFragment"
                    android:id="@+id/addPicFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    tools:layout="@layout/fragment_add_pic" />
            </FrameLayout>



        </LinearLayout>
        <!-- The navigation drawer -->
        <RelativeLayout
            android:layout_width="250dp"
            android:id="@+id/left_drawer"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@color/Helio"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:id="@+id/profilMenuContainer"
                >

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pp_swag"
                    android:id="@+id/profilMenuPicture"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/GreyTc"
                    android:textSize="22dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/profilMenuName"
                    android:layout_gravity="bottom|left"
                    />
            </FrameLayout>

            <ListView
                android:id="@+id/menu_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:layout_below="@id/profilMenuContainer"
                />
            <!--<ImageView
                android:layout_width="130dp"
                android:layout_height="105dp"
                android:src="@drawable/logo4"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />-->
        </RelativeLayout>


    </android.support.v4.widget.DrawerLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/Evening"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageButton
            android:id="@+id/barMenuButton1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menub_item_selector"
            android:onClick="switchMyProfile"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu_profileb" />

        <ImageButton
            android:id="@+id/barMenuButton2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menub_item_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu_chatb"  />
        <ImageButton
            android:id="@+id/barMenuButton3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menub_item_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:onClick="switchMap"
            android:src="@drawable/menu_mapb"  />
        <ImageButton
            android:id="@+id/barMenuButton4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menub_item_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu_networkb"  />
        <ImageButton
            android:id="@+id/barMenuButton5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/menub_item_selector"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/menu_eventsb"  />

    </LinearLayout>
</LinearLayout>